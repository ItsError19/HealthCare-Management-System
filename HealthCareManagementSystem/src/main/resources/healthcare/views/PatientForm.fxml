<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthcare.controllers.PatientController"
      spacing="15"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Patient Information" 
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
    
    <GridPane hgap="15" vgap="15">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                  promptText="Enter full name" style="-fx-pref-width: 250;"/>
        
        <Label text="Age:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="ageField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                  promptText="Enter age" style="-fx-pref-width: 80;"/>
        
        <Label text="Gender:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="genderCombo" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                  promptText="Select gender" style="-fx-pref-width: 150;"/>
        
        <Label text="Contact:" GridPane.rowIndex="3" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="contactField" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                  promptText="Enter phone number" style="-fx-pref-width: 200;"/>
        
        <Label text="Address:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextArea fx:id="addressArea" GridPane.rowIndex="4" GridPane.columnIndex="1" 
                  promptText="Enter full address" 
                  style="-fx-pref-width: 250; -fx-pref-height: 80;"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button fx:id="saveButton" text="Save Patient" onAction="#savePatient"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
</VBox>