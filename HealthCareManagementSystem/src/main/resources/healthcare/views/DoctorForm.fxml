<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthcare.controllers.DoctorController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Doctor Information" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="15">
        <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                  promptText="Enter doctor's full name" style="-fx-pref-width: 250;"/>
        
        <Label text="Specialization:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="specializationField" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                  promptText="Enter specialization" style="-fx-pref-width: 250;"/>
        
        <Label text="Contact:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="contactField" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                  promptText="Enter contact number" style="-fx-pref-width: 250;"/>
    </GridPane>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel" onAction="#cancel"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        <Button text="Save Doctor" onAction="#saveDoctor"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
</VBox>