<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.healthcare.controllers.AppointmentController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="New Appointment" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <GridPane hgap="10" vgap="15">
        <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="patientCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                  style="-fx-pref-width: 200;" promptText="Select Patient"/>
        
        <Label text="Doctor:" GridPane.rowIndex="1" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <ComboBox fx:id="doctorCombo" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                  style="-fx-pref-width: 200;" promptText="Select Doctor"/>
        
        <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" 
                    style="-fx-pref-width: 200;"/>
        
        <Label text="Time (HH:MM:SS):" GridPane.rowIndex="3" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextField fx:id="timeField" GridPane.rowIndex="3" GridPane.columnIndex="1" 
                   style="-fx-pref-width: 200;"/>
        
        <Label text="Notes:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
               style="-fx-font-weight: bold;"/>
        <TextArea fx:id="notesArea" GridPane.rowIndex="4" GridPane.columnIndex="1" 
                  style="-fx-pref-width: 200; -fx-pref-height: 100;" 
                  promptText="Enter any additional notes"/>
    </GridPane>

    <Label fx:id="statusLabel" style="-fx-text-fill: red;"/>
    
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Clear" onAction="#clearFields"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15;"/>
        <Button text="Book Appointment" onAction="#bookAppointment"
                style="-fx-font-weight: bold; -fx-padding: 5 15 5 15; -fx-background-color: #2ecc71; -fx-text-fill: white;"/>
    </HBox>
</VBox>